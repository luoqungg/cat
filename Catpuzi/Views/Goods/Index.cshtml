@*@model IEnumerable<Models.Goods>*@
@model Catpuzi.Models.GoodsModel
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~ndles/modernizr")
@Styles.Render("~/bootstrap-3.3.7-dist/css/bootstrap.min.css")
@Scripts.Render("~/bootstrap-3.3.7-dist/js/bootstrap.min.js")
@Styles.Render("~/font-awesome-4.7.0/css/font-awesome.min.css")
@Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<style>

    .img1 {
        width: 200px;
        height: 200px;
    }

        .img1:hover {
            cursor: pointer;
            transition: all 0.3s;
            transform: scale(1.05)
        }

    ul {
        list-style: none;
    }

    .li {
        float: left;
        margin-left: 100px;
    }
</style>
<body>
    <div>
        <div id="myCarousel" class="carousel slide" style="margin-left :265px;margin-right:210px;">
            <!-- 轮播（Carousel）指标 -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"><>
                <li data-target="#myCarousel" data-slide-to="1"><>
                <li data-target="#myCarousel" data-slide-to="2"><>
            </ol>
            <!-- 轮播（Carousel）项目 -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/elan/10.jpg" style="width:1125px;height :360px;" />
                </div>
                <div class="item">
                    <img src="~/imagesou/10.jpg" style="width:1125px;height :360px;" />
                </div>
                <div class="item">
                    <img src="~/images/elan/3.jpg" style="width:1125px;height :360px;" />
                </div>
                <div class="item">
                    <img src="~/images/elan/6.jpg" style="width:1125px;height :360px;" />
                </div>
            </div>
            <!-- 轮播（Carousel）导航 -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div style="width:1300px;margin-left:130px;margin-bottom:150px;" id="ios1" class=" tab-pane fade in active ">
        <ul class="panel-body">

            @foreach (var item in Model.GOODS)
            {

                <li class=" li " style="width:150px;height:270px;">
                    <a href="@Url.Action("Detail","Goods",new { id=@item.good_id})"><img class="img1" src="@item.good_img"></a>
                    <p></p>
                    <p style="font-size:12px;"> @item.good_introduce</p>
                </li>
           }
            </ul>
        </div>
    </body>
